   <children>
      <Label layoutX="25.0" layoutY="22.0" text="Customers" textFill="#24ddc5">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="customerTV" layoutX="25.0" layoutY="86.0" prefHeight="200.0" prefWidth="1006.0">
        <columns>
            <TableColumn fx:id="customerIDColumn" prefWidth="70.0" text="ID" />
          <TableColumn fx:id="customerNameColumn" prefWidth="82.0" text="Name" />
          <TableColumn fx:id="customerAddressColumn" minWidth="0.0" prefWidth="106.0" text="Address" />
            <TableColumn fx:id="customerZipColumn" prefWidth="81.0" text="Postal Code" />
