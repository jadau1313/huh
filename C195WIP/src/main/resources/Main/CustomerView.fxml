            <TableColumn fx:id="customerLastUpdateByColumn" prefWidth="133.0" text="Last updated by" />
            <TableColumn fx:id="customerStateProvinceColumn" prefWidth="102.0" text="State/Province" />
        </columns>
      </TableView>
      <Button fx:id="addCustomerBtn" layoutX="25.0" layoutY="320.0" mnemonicParsing="false" onAction="#goToAddCustomer" text="Add Customer" />
